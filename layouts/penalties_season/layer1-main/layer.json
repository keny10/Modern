{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        
        "Orientation": "Vertical",
        "Items": [
            //header block
            {               
                "BlockType": "component",
                "ComponentName": "header_block",
                "ComponentOptions" :
                {
                    "Vars":
                    {
                        "header" : "Season penalties"
                    }
                }               
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 200,
                "TableOptions": {
                    "ItemsSource": "{Penalties.Drivers}",
                    "SortMember" : "PenaltyPointsActive",
                    "Reverse" : true,
                    "RowSpacing": 16,
                    "ColSpacing": 4,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //position
                        // {
                        //     "Header": "",
                        //     "Template": {
                        //         "BlockType" : "component",                                
                        //         "ComponentName" : "position_cell",
                        //         "ComponentOptions" :{
                        //             "Vars" :{
                        //                 "position" : "{Item.PositionString}"
                        //             }
                        //         }                           
                        //     }
                        // },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"   
                            }
                        },                        

                        //points
                        {
                            "Header": "PPA",
                            "MarginLeft" : 20,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Background": "{BackgroundDefault}",                                
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.PenaltyPointsActive, Converter=NumberZeroToEmpty}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "FontName" : "{FontNameBold}",                                        
                                        "Foreground" : "#B83939",
                                        "TextOptionsExtern": "primaryNumber"
                                    }
                                ]                               
                            }
                        }, 
                        
                        {
                            "Header" : "WA",
                            "MarginLeft" : 20,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltyWarningsActive, Converter=NumberZeroToEmpty}",
                                "FontName" : "{FontNameBold}",                                        
                                "Foreground" : "#B83939",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        {
                            "Header" : "PTS",
                            "MarginLeft" : 20,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltySeconds, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPointsForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        {
                            "Header" : "PPS",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltyPositions, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPointsForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        {
                            "Header" : "PTG",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltyIngameSeconds, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPointsForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        {
                            "Header" : "PPO",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltyPointsOverall, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPointsForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        {
                            "Header" : "WO",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Background": "{BackgroundDefault}",
                                "Source" : "{Item.PenaltyWarningsOverall, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{StandingsPointsForeground}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        }  
                    ]
                }
            },

            //footer
            {
                "BlockType": "dock",
                "Width": "*",
                "Height": "*",
                "Margin": "8, 28, 8, 0",
                "HorizontalAlignment" : "Left",
                "Spacing": 0,
                "Items": [
                    {
                        "BlockType": "text",
                        "Width": "1360",
                        "Foreground": "#85CCCCCC",
                        "Height": "*",
                        "Source": "PPA - active penalty points, WA - active warnings, PTS - penalty time (seconds) by stewards, PPS - penalty positions by stewards, PTG - penalty time (seconds) by game, PPO - penalty points overall, WO - warnings overall",
                        "TextOptions": {
                            "FontSize": 22,
                            "Wrap": true,
                            "HorizontalAlignment": "Left"
                        }
                    }
                ]
            }
        ]
    }
}
