{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "itemstack",
                "Orientation": "Vertical",
                "VerticalAlignment": "Center",
                "HorizontalAlignment": "Center",
                //"Padding": "5,0,5,0",

                "ItemStackOptions": {
                    "ItemSource": "{Standings.Teams}",
                    "TakeItemIndex": "{TeamNumberToCompare}",
                    "Template": {
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Center",
                        "Height": 625, //1114,
                        "Width": 730, //1314,
                        "Background": "{Item.Team.Color}",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Source": "Drivers Head --To-- Head",
                                "HorizontalAlignment": "Center",
                                "MarginTop": 20,
                                "TextOptions": {
                                    "HorizontalAlignment": "Center",
                                    "FontSize": "22",
                                    "Foreground": "{ComparisonColorText1}"
                                }
                            },
                            {
                                "BlockType": "text",
                                "Source": "{Item.Team.Name}",
                                "HorizontalAlignment": "Center",
                                "MarginTop": 10,
                                "TextOptions": {
                                    "HorizontalAlignment": "Center",
                                    "FontSize": "52",
                                    "Foreground": "{ComparisonColorText1}"
                                }
                            },
                            {
                                "BlockType": "image",
                                "HorizontalAlignment": "Center",
                                "Height" : 200,
                                "MarginTop": -20,
                                "ImageOptions": {
                                    "Path": "{Item.Team.LogoPath}",
                                    //"VerticalAlignment": "Center"
                                }
                            },
                            {
                                "BlockType": "dock",
                                "Orientation": "Horizontal",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "HorizontalAlignment": "Left",
                                        "MarginLeft": 30,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Height": 73,
                                                "Source": "{Item.Driver0.Driver.RealName}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "25",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Source": "{Item.Driver0.Driver.RaceNumber}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "100",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Height": 73,
                                                "Source": "{Item.Driver0.Driver.Name}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "25",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "HorizontalAlignment": "Right",
                                        "MarginRight": 30,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Height": 73,
                                                "Source": "{Item.Driver1.Driver.RealName}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "25",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Source": "{Item.Driver1.Driver.RaceNumber}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "100",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Center",
                                                "Width": 288,
                                                "Height": 73,
                                                "Source": "{Item.Driver1.Driver.Name}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "FontSize": "25",
                                                    "Foreground": "{ComparisonColorText1}"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            },
            {
                "BlockType": "stack",
                "Orientation": "Horizontal",
                "HorizontalAlignment": "Center",
                "MarginTop": 0,
                "Items": [
                    
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Center",
                        "ItemStackOptions": {
                            "ItemSource": "{Standings.Teams}",
                            "TakeItemIndex": "{TeamNumberToCompare}",
                            "Template": {
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Background": "{Item.Team.Color}",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    //Comp Position
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Position",
                                                "statval": "{Item.Driver0.Position}",
                                                "statvalsec": "{Item.Driver1.Position}",
                                                "statcolor": "#000000"
                                            }
                                        }
                                    },
                                    //Comp Points
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Points",
                                                "statval": "{Item.Driver0.Points}",
                                                "statvalsec": "{Item.Driver1.Points}",
                                                "bg": "mid"
                                            }
                                        }
                                    },
                                    //Comp Races
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Races",
                                                "statval": "{Item.Driver0.RacesCount}",
                                                "statvalsec": "{Item.Driver1.RacesCount}",
                                                "bg": "mid"
                                            }
                                        }
                                    },
                                    // Count DNF
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "DNFs",
                                                "statval": "{Item.Driver0.CountDnf}",
                                                "statvalsec": "{Item.Driver1.CountDnf}",
                                                "bg": "bot"
                                            }
                                        }
                                    },
                                    //separated
                                    //Wins
                                    {
                                        "BlockType": "component",
                                        "MarginTop": 20,
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Race Wins",
                                                "statval": "{Item.Driver0.CountP1}",
                                                "statvalsec": "{Item.Driver1.CountP1}",
                                                "bg": "top"
                                            }
                                        }
                                    },
                                    //Poles
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Poles",
                                                "statval": "{Item.Driver0.CountQualP1}",
                                                "statvalsec": "{Item.Driver1.CountQualP1}",
                                                "bg": "mid"
                                            }
                                        }
                                    },
                                    // FastestLaps
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Fastest Laps",
                                                "statval": "{Item.Driver0.RaceFastestLapCount}",
                                                "statvalsec": "{Item.Driver1.RaceFastestLapCount}",
                                                "bg": "mid"
                                            }
                                        }
                                    },
                                    //DOTD
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Driver of the Day",
                                                "statval": "{Item.Driver0.RaceDriverDayCount}",
                                                "statvalsec": "{Item.Driver1.RaceDriverDayCount}",
                                                "bg": "mid"
                                            }
                                        }
                                    },
                                    //Penalty Points
                                    {
                                        "BlockType": "component",
                                        "ComponentOptions": {
                                            "ComponentName": "comparison_row",
                                            "Vars": {
                                                "statname": "Penalty Points",
                                                "statval": "{Item.Driver0.PenaltyPoints}",
                                                "statvalsec": "{Item.Driver1.PenaltyPoints}",
                                                "bg": "bot"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    }
                ]
            }
        ]
    },
        }