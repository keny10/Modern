{
    "BlockType": "stack",
    "Witdh": "*",
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "BackgroundImage": "images/Modern/rowbg.png",
            "Padding": "5, 25, 20, 5",
            "Width": 600,
            "Height": 160,
            "MarginTop": 5,
            "MarginBottom": 5,
            "Items": [
                //left
                {
                    "BlockType": "stack",
                    "Width": 140,
                    "Height": 160,
                    "Orientation": "Vertical",
                    "Margin": "10,30,20,20",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Foreground": "{ForegroundBlack}",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 30,
                            "Source": "{Item.Date, Converter=DateToDayOfMonth}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "VerticalAlignment": "Top",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "RenderIf": "{ShowCountryFlagsIconInCalendar}",
                                    "Items": [
                                        { //flags : https://www.freeflagicons.com/buy/round_icon/
                                            "BlockType": "image",
                                            "MarginTop": 5,
                                            "MarginLeft": 23,
                                            "Width": 29,
                                            "Height": 29,
                                            "Opacity": 75,
                                            "Source": "images/Modern/Flags/{Item.Track.CountryName}.png"
                                        }
                                    ]
                                },
                                {
                                    "BlockType": "text",
                                    "Foreground": "{ForegroundGrey}",
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 23,
                                    "MarginTop": 5,
                                    "Triggers": [
                                        {
                                            "Condition": "{ShowCountryFlagsIconInCalendar}",
                                            "Property": "MarginLeft",
                                            "Value": "10"
                                        }
                                    ],
                                    "HorizontalAlignment": "Center",
                                    "Source": "[{Item.Date, Converter=DateToMonthInWords}]"
                                },
                            ]
                        },
                        {
                            "BlockType": "itemstack",
                            "Orientation": "Horizontal",
                            "HorizontalAlignment": "Center",
                            "MarginTop": 10,
                            "ItemStackOptions": {
                                "ItemSource": "{Item.Races}",
                                "Template": {
                                    "BlockType": "text",
                                    "Source": "[{Item.RaceType}]",
                                    "HorizontalAlignment": "Center",
                                    "Foreground": "{ForegroundRed}",
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 20,
                                    "RenderIf": "{Item.RaceType, converter=StringEquals, parameter=Sprint}"
                                }
                            }
                        }
                    ]
                },
                //Center
                {
                    "BlockType": "stack",
                    "Width": "*",
                    "Height": 160,
                    "Orientation": "Vertical",
                    "MarginLeft": -6,
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "VerticalAlignment": "Top",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Foreground": "{ForegroundRed}",
                                    "FontName": "{FontNameDefault}",
                                    "VerticalAlignment": "Top",
                                    "FontSize": 17,
                                    "Source": "[ROUND] {Item.Position}"
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{ForegroundBlack}",
                            "HorizontalAlignment": "Left",
                            "FontName": "{FontNameBold}",
                            "MarginTop": 10,
                            "FontSize": 28,
                            "Source": "{Item.Track.CircuitName}"
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{ForegroundGrey}",
                            "HorizontalAlignment": "Left",
                            "FontName": "{FontNameDefault}",
                            "MarginTop": 14,
                            "FontSize": 16,
                            "Source": "{Item.Track.CircuitFullName, converter=StringToUpperString}"
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Items": [
                                //country
                                {
                                    "BlockType": "text",
                                    "Source": "[{Item.Track.CountryName}]",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameDefault}",
                                    "Foreground": "{ForegroundGrey}",
                                    "MarginTop": 14,
                                    "FontSize": 16
                                },
                                //winner
                                {
                                    "BlockType": "text",
                                    "RenderIf": "{ShowWinnerInCalendar}",
                                    "MarginLeft": 30,
                                    "Source": "{Item.WinnerString}",
                                    "HorizontalAlignment": "Right",
                                    "FontName": "{FontNameDefault}",
                                    "Foreground": "{ForegroundRed}",
                                    "MarginTop": 14,
                                    "FontSize": 16
                                }
                            ]
                        }
                    ]
                },
                //Right
                {
                    "BlockType": "stack",
                    "RenderIf": "{ShowTrackIconInCalendar}",
                    "Width": 100,
                    "Height": 160,
                    "Orientation": "Vertical",
                    "VerticalAlignement": "Center",
                    "MarginRight": 10,
                    "Items": [
                        {
                            "BlockType": "image",
                            "MarginTop": 20,
                            "Width": 100,
                            "Height": 100,
                            "Opacity": 20,
                            "Source": "images/Modern/Track/{Item.Track.CircuitName}.png"
                        }
                    ]
                },
            ]
        }
    ]
}