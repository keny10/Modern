{
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Width": 580,
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "BackgroundImage": "images/Modern/Row/{Item.Team.Name}_light.png",
            "Width": 575,
            "Height": 86,
            "MarginTop": 0,
            "MarginBottom": 5,
            "Items": [
                //left part number
                {
                    "BlockType": "text",
                    "Width": 40,
                    "MarginLeft": 20,
                    "Source": "{Item.Position}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "{ForegroundBlack}",
                    "FontSize": 36
                },
                {
                    "BlockType": "image",
                    "VerticalAlignment": "Center",
                    "Width": 10,
                    "Height": 55,
                    "Opacity": 100,
                    "ImageOptions": {
                        "Path": "images/Modern/Shape/{Item.Team.Name}.png"
                    }
                },
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "VerticalAlignment": "Center",
                    "Height": 70,
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Horizontal",
                            "Items": [
                                //Real name
                                {
                                    "BlockType": "text",
                                    "MarginLeft": 18,
                                    "MarginTop":20,
                                    "Source": "{Item.Team.Name}",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBold}",
                                    "Foreground": "{ForegroundBlack}",
                                    "FontSize": 26
                                }
                            ]
                        }
                    ]
                },
                //points
                {
                    "BlockType": "Dock",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Center",
                    "MarginLeft":135,
                    "MarginTop":47,
                    "TextAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Orientation": "Horizontal",
                            "Source": "{Item.Points}",
                            "HorizontalAlignment": "Center",
                            "TextAlignment": "Center",
                            "FontName": "{FontNameBold}",
                            "Foreground": "{ForegroundBlack}",
                            "FontSize": 25
                        }
                    ]
                }
            ]
        }
    ]
}