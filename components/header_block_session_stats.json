{
    "Name": "headerBlock",
    "BlockType": "dock",
    "Orientation": "Horizontal", 
    "Background": "{HeaderDefault}",
    "Padding": "42, 16, 42, 16",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Items": [

                //league name
                {
                    "BlockType" : "stack",
                    "VerticalAlignment" : "Center",
                    "Items" :
                    [
                        {                            
                            "BlockType": "text",
                            "Source": "{Season.LeagueInfo.LeagueName}",                            
                            "FontName": "{FontNameBold}",
                            "FontSize": 20,
                            "Foreground": "{Foregroundwhithe}"
                        },
                        {                            
                            "BlockType": "text",
                            "Source": " · {Season.Name}",
                            "VerticalAlignment" : "Center",
                            "FontName": "{FontNameBold}",
                            "FontSize": 16,
                            "Foreground": "{Foregroundwhithe}"
                        }
                    ]
                },   
                //main header
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 8,
                    "Items": [
                        {
                            "BlockType": "image",
                            "VerticalAlignment": "Center",
                            "Height": 48,
                            "Source": "images/Modern/statistics_icon.png"
                        },

                        {
                            "BlockType": "text",
                            "MarginLeft": 12,
                            "VerticalAlignment": "Center",
                            "Source": "[{Statistics.Header}]",
                            "FontName": "{FontNameBold}",
                            "FontSize": 28,
                            "Foreground": "{Foregroundwhithe}"
                        },

                        {
                            "BlockType": "text",
                            //"MarginLeft": 12,
                            //"MarginTop": 2,
                            "RenderIf": "{Statistics.SubHeader, Converter=EmptyObjectToFalse}",
                            "VerticalAlignment": "Center",
                            "Source": "  ·  {Statistics.SubHeader}",
                            "FontName": "{FontNameBold}",
                            "FontSize": 18,
                            "Foreground": "{Foregroundwhithe}"
                        }
                    ]
                }
            ]
        },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "MarginLeft" : 56,
            "Orientation": "Vertical",
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Spacing": 8,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "[Round] {Season.SeasonCurrentNumberEvent} [of] {Season.SeasonOverallNumberEvents}",
                                    "FontName": "{FontNameBold}", 
                                    "FontSize": 18,
                                    "Foreground": "{Foregroundwhithe}"
                                },

                                {
                                    "BlockType": "stack",
                                    "HorizontalAlignment": "Right",
                                    "Items": [
                                        {
                                            "BlockType": "text",
                                            "Source": "[{Session.SessionType}]",
                                            "FontName": "{FontNameBold}", 
                                            "FontSize": 18,
                                            "Foreground": "{Foregroundwhithe}"
                                        },
                                        //race duration
                                        {
                                            "BlockType": "text",                                            
                                            "RenderIf": false,
                                            "Source": " • {Session.TotalLaps} [laps]",
                                            "FontName": "{FontNameBold}", 
                                            "FontSize": 18,
                                            "Foreground": "{Foregroundwhithe}",
                                            "Triggers" : 
                                            [
                                                {
                                                    "Condition" : "{Session.IsLiveData}",
                                                    "ConditionAnd" : "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                                                    "Property" : "RenderIf",
                                                    "Value" : true
                                                }
                                            ]
                                        },
                                        //qual, practice duration
                                        {
                                            "BlockType": "text",                                                                                  
                                            "RenderIf": false,
                                            "Source": " • {Session.SessionDurationMinutes} [min].",
                                            "FontName": "{FontNameBold}", 
                                            "FontSize": 18,
                                            "Foreground": "{Foregroundwhithe}",
                                            "Triggers" : 
                                            [
                                                {
                                                    "Condition" : "{Session.IsLiveData}",
                                                    "ConditionAnd" : "{Session.SessionType, Converter=StringNotEquals, Parameter=Race}",
                                                    "Property" : "RenderIf",
                                                    "Value" : true
                                                }
                                            ]
                                        }
                                    ]
                                },

                                {
                                    "BlockType": "stack",
                                    "HorizontalAlignment": "Right",
                                    "Spacing": 4,
                                    "Items": [
                                        {
                                            "Name": "CountryFlag",
                                            "BlockType": "image",
                                            "VerticalAlignment": "Center",
                                            "Height": 36,
                                            "Source": "images/Modern/Flags/{Session.Track.CountryName}.png"
                                        },

                                        {
                                            "Name": "CountryName",
                                            "BlockType": "text",
                                            "MarginLeft": 12,
                                            "VerticalAlignment": "Center",
                                            "Source": "{Session.Track.Nation.Code, Converter=StringToUpperString}",
                                            "FontName": "{FontNameBold}", 
                                            "FontSize": 18,
                                            "Foreground": "{Foregroundwhithe}",
                                        }
                                    ]
                                }
                            ]
                        },

                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 82,
                            "MarginLeft": 36,
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}